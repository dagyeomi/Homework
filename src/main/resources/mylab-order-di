<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Product #1 : setter 주입 -->
    <bean id="product1" class="mylab.order.di.entity.Product">
        <property name="id" value="P001"/>
        <property name="name" value="노트북"/>
        <property name="price" value="150000"/>
    </bean>

    <!-- Product #2 : 생성자 주입 -->
    <bean id="product2" class="mylab.order.di.entity.Product">
        <constructor-arg value="P002"/>
        <constructor-arg value="스마트폰"/>
        <constructor-arg value="800000"/>
    </bean>

    <!-- ShoppingCart : 리스트 setter 주입 -->
    <bean id="shoppingCart" class="mylab.order.di.entity.ShoppingCart">
        <property name="products">
            <list>
                <ref bean="product1"/>
                <ref bean="product2"/>
            </list>
        </property>
    </bean>

    <!-- OrderService : ShoppingCart 의존성 setter 주입 -->
    <bean id="orderService" class="mylab.order.di.service.OrderService">
        <property name="shoppingCart" ref="shoppingCart"/>
    </bean>
</beans>
